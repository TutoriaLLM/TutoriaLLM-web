---
import { CardGrid, Card } from "@astrojs/starlight/components";

// GitHub APIからコントリビューターを取得する関数
async function getContributors() {
  const response = await fetch('https://api.github.com/repos/TutoriaLLM/TutoriaLLM/contributors');
  if (!response.ok) {
    throw new Error('Failed to fetch contributors');
  }
  return await response.json();
}

// サーバーサイドでコントリビューターを取得
const contributors = await getContributors();
---
<CardGrid>
    <style>
        .card {
            padding: 1rem;
            border: 1px solid #ccc;
            border-radius: 20px;
            display: flex;
            align-items: center;
            gap: 1rem;
            overflow: clip;
        }
        .info {
            display: flex;
            flex-direction: column;
        }
        img {
            border-radius: 50%;
        }
    </style>
  {contributors.map((contributor: any) => (
    <div class="card">

      <img class="img" src={contributor.avatar_url} alt={contributor.login} width="50" height="50" />
        <span class="info">
            <a
                href={contributor.html_url}
            >@{contributor.login}</a>
            <p>Contributions: {contributor.contributions}</p>
        </span>
    </div>

  ))}
</CardGrid>